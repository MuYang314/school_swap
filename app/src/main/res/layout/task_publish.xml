<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".PostTaskActivity">

    <!-- 顶部返回栏 -->
    <LinearLayout
        android:id="@+id/back_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 返回按钮 -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="返回上一级"
            android:src="@drawable/ic_arrow_back"
            android:background="@color/white"
            app:tint="#333" />
    </LinearLayout>

    <!-- 内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/action_bar"
        app:layout_constraintTop_toBottomOf="@id/back_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 任务标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务标题"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:border="1px solid #e0e0e0"
                    android:borderRadius="4px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:hint="请输入任务标题"/>
            </LinearLayout>

            <!-- 任务分类 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务分类"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ArrayAdapter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/task_categories"/>
                </Spinner>
            </LinearLayout>

            <!-- 任务预算 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务预算"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:border="1px solid #e0e0e0"
                    android:borderRadius="4px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:hint="请输入预算金额"
                    android:inputType="number"/>
            </LinearLayout>

            <!-- 截止时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:border="1px solid #e0e0e0"
                    android:borderRadius="4px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:hint="请选择截止时间"/>
            </LinearLayout>

            <!-- 任务详情 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务详情"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:border="1px solid #e0e0e0"
                    android:borderRadius="4px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:hint="请详细描述任务需求、时间地点等信息"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:minLines="4"/>
            </LinearLayout>

            <!-- 联系方式 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:border="1px solid #e0e0e0"
                    android:borderRadius="4px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:hint="请输入联系方式"/>
            </LinearLayout>

            <!-- 发布按钮 -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布任务"
                android:background="#4CAF50"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="15dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>